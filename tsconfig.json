{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ES6", "es2016"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"strictNullChecks": false,
		"typeRoots": ["./src/@types", "./node_modules/@types"]
	},
	"include": ["src/**/*.*"]
}
